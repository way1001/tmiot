<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiforest.tmiot.common.data.mapper.DriverRunHistoryMapper">

    <select id="getDurationDay" resultType="com.aiforest.tmiot.common.data.entity.model.DriverRunDO">
        select driver_id,
               status,
               SUM(duration) as duration
        from tm_driver_run_history
        where driver_id = #{id}
          and status = #{status}
          and create_time between #{startOfDay} and #{endOfDay}
        GROUP BY driver_id
    </select>
</mapper>
